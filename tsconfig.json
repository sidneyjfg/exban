{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",  
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./src",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
